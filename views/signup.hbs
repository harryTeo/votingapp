<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<h1 class="text-center">Sign Up</h1>
			{{#if hasErrors}}
				<div class="alert alert-danger">
					{{#each messages}}
						<p>{{this}}</p>
					{{/each}}
				</div>
			{{/if}}
			<form action="/signup" method="post">
				<div class="form-group">
					<label for="email">E-Mail</label>
					<input type="text" name="email" id="email" class="form-control">
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" name="password" id="password" class="form-control">
				</div>	
				<input type="hidden" name="_csrf" value="{{csrfToken}}">
				<button type="submit" class="btn btn-primary">Sign Up</button>			
			</form>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
      <div class="separator-with-label">
        <hr>
        <label><span>OR</span></label>
      </div>
      <a href="/auth/facebook" class="btn btn-block btn-primary"><i class="fa fa-facebook" aria-hidden="true"></i> Continue with Facebook</a>
      <a href="/auth/twitter" class="btn btn-block btn-info"><i class="fa fa-twitter" aria-hidden="true"></i> Continue with Twitter</a>
		</div>
	</div>		
</div>