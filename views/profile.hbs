<div class="container">
	<div class="row" id="myPolls">
  	<div class="col-xs-12 col-md-8 col-md-offset-2">
  		{{#if polls}}
			  <table id="myPollsTable" class="table table-striped table-hover table-bordered">
			  	<caption>My Polls</caption>
			    <thead>
			      <tr>
			      	<th class="text-center">#</th>
			        <th>Poll Subject</th>
			        <th class="text-center">Created At</th>
			        <th class="text-center">Total Votes</th>
			        <th class="text-center"></th>
			      </tr>
			    </thead>
			    <tbody>
			    	{{#each polls}}
						  <tr>
						  	<td class="text-center">{{this.index}}</td>
						    <td class="pollSubject">{{this.subject}}</td>
						    <td class="text-center">{{this.createdAt}}</td>
						    <td class="text-center">{{this.totalVotes}}</td>
						    <td class="text-center">
						    	<a href="/poll/{{this.id}}" class="btn btn-info view-button" role="button"><i class="fa fa-eye" aria-hidden="true"></i> View</a>
				        	<button class="btn btn-danger" data-toggle="modal" data-target="#deletePollModal" data-id="{{this.id}}" name="{{this.subject}}"><i class="fa fa-trash" aria-hidden="true"></i> Delete</button>
				        </td>
				      </tr>	  
			      {{/each}}
			    </tbody>
			  </table>
		  {{/if}}    		
  	</div>
  </div>
	<div class="row" id="pollSubmit">
		<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">	
			<h2 class="text-center">Add a Poll</h2>
			<p class="text-center">Poll Question and at least 2 Options required.</p>
			<div class="panel panel-default">
				<div class="panel-body">
					<form id="newPoll" action="/newpoll" method="post">
						<input id="pollSubject" name="pollSubject" type="text" class="form-control" placeholder="Enter Poll Question Here" required></input>
						<ul class="list-group">
							<li class="list-group-item option" id="newPollOption1">
								<div class="input-group input-group-lg">
									<span class="input-group-addon">1</span>
									<input id="newPollOptionInput1" name="newPollOptionInput1" type="text" class="form-control" placeholder="Option 1" required>
								</div>
							</li>
							<li class="list-group-item option" id="newPollOption2">
								<div class="input-group input-group-lg">
									<span class="input-group-addon">2</span>
									<input id="newPollOptionInput2" name="newPollOptionInput2" type="text" class="form-control" placeholder="Option 2" required>
								</div>
							</li>																
							<li class="list-group-item option transparent" id="newPollOption3">
								<div class="input-group input-group-lg">
									<span class="input-group-addon">3</span>
									<input id="newPollOptionInput3" name="newPollOptionInput3" type="text" class="form-control" placeholder="Option 3" disabled>
									<span class="input-group-btn">
										<button class="btn btn-success" type="button"><i class="fa fa-plus" aria-hidden="true"></i></button>
									</span>
								</div>
							</li>
						</ul>
						<div class="form-group">
							<input type="hidden" name="_csrf" value="{{csrfToken}}">
							<button class="btn btn-primary btn-lg" type="submit" disabled>Create Poll</button>
						</div>	
					</form>				
				</div> {{!-- End of panel-body --}}
			</div> {{!-- End of panel --}}
		</div>
	</div>	{{!-- End of pollSubmit section --}}	
</div>

<!-- Modals -->
<div id="deletePollModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h1><i class="fa fa-exclamation-triangle" aria-hidden="true"></i></h1>
      </div>
      <div class="modal-body">
        <p class="modal-title">Are you sure?</p>
        <p class="message"></p>
        <p class="subMessage">will be permanently deleted</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-id="" id="deletePoll">Delete</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>

<div id="deletePollErrorModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h1><span class="glyphicon glyphicon-fire"></span></h1>
      </div>
      <div class="modal-body">
        <p class="modal-title">Ooops!</p>
        <p class="message">The action could not be completed.</p>
        <p class="subMessage">Keep trying, never give up <i class="fa fa-smile-o" aria-hidden="true"></i></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>