<div class="container">

	<div class="row">
		<div class="col-xs-12">
			<h1 class="text-center">Welcome to VotingApp!</h1>
			<p class="text-center">Select a poll to see the results and vote{{#unless isLoggedIn}}, or <a href="/signin">Sign In</a> to create a new poll{{/unless}}.</p>
		</div>
	</div>

	<div class="row" id="pollsSection">
		<div class="col-xs-12">
			{{#each polls}}
				<a href="/poll/{{this.id}}" class="btn btn-default btn-block" role="button">{{this.subject}}</a>
			{{/each}}	
		</div>
	</div>   

</div>